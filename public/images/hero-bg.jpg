<svg width="1920" height="1080" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="heroGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1e40af;stop-opacity:0.9" />
      <stop offset="50%" style="stop-color:#3b82f6;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#60a5fa;stop-opacity:0.7" />
    </linearGradient>
    <linearGradient id="overlay" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#000000;stop-opacity:0.2" />
      <stop offset="100%" style="stop-color:#000000;stop-opacity:0.4" />
    </linearGradient>
    <!-- Pattern for subtle texture -->
    <pattern id="dots" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
      <circle cx="20" cy="20" r="1" fill="white" opacity="0.1"/>
    </pattern>
  </defs>
  
  <!-- Base gradient background -->
  <rect width="100%" height="100%" fill="url(#heroGradient)"/>
  
  <!-- Subtle pattern overlay -->
  <rect width="100%" height="100%" fill="url(#dots)"/>
  
  <!-- Geometric shapes for modern look -->
  <g opacity="0.1">
    <!-- Large circle -->
    <circle cx="1600" cy="200" r="300" fill="white"/>
    <!-- Rectangle -->
    <rect x="200" y="700" width="400" height="200" fill="white" rx="20"/>
    <!-- Triangle -->
    <polygon points="100,900 300,600 500,900" fill="white"/>
  </g>
  
  <!-- Overlay for text readability -->
  <rect width="100%" height="100%" fill="url(#overlay)"/>
  
  <!-- Optional: Building silhouettes for real estate theme -->
  <g opacity="0.15" fill="white">
    <rect x="1400" y="600" width="80" height="480" rx="4"/>
    <rect x="1500" y="500" width="100" height="580" rx="4"/>
    <rect x="1620" y="650" width="90" height="430" rx="4"/>
    <rect x="1730" y="550" width="70" height="530" rx="4"/>
    
    <!-- Windows on buildings -->
    <g opacity="0.6">
      <rect x="1420" y="620" width="10" height="15" fill="#3b82f6"/>
      <rect x="1440" y="620" width="10" height="15" fill="#3b82f6"/>
      <rect x="1420" y="650" width="10" height="15" fill="#3b82f6"/>
      <rect x="1440" y="650" width="10" height="15" fill="#3b82f6"/>
      
      <rect x="1520" y="520" width="12" height="18" fill="#3b82f6"/>
      <rect x="1545" y="520" width="12" height="18" fill="#3b82f6"/>
      <rect x="1570" y="520" width="12" height="18" fill="#3b82f6"/>
      <rect x="1520" y="550" width="12" height="18" fill="#3b82f6"/>
      <rect x="1545" y="550" width="12" height="18" fill="#3b82f6"/>
      <rect x="1570" y="550" width="12" height="18" fill="#3b82f6"/>
    </g>
  </g>
</svg>
